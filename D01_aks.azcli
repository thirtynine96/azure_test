az group create -n $RESOURCE_GROUP -l $LOCATION
#az group update --resource-group $RESOURCE_GROUP --set tags.CostCenter='{"Dept":"IT","Environment":"Test"}'


# Provider register 목록확인 (리소스 공급자가 등록되어 있어야 함)
